{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["dom", "es5", "es2015", "es2016", "es2017", "esnext"]
  },
  "include": ["__tests__", "generators", "tools"],
  "exclude": [
    "node_modules",
    "coverage",
    "dist",
    "build",
    "generators/*/templates"
  ]
}
